{
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "no-unnecessary-class": [
            true,
            "allow-constructor-only",
            "allow-static-only",
            "allow-empty-class"
          ]
    }
}
